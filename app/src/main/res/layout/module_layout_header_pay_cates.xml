<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_header_pay_cate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="付款方式"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在  "
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_red"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  内支付"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/module_include_divider" />

    <LinearLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_pay3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="银行卡"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bank_detail_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62px"
            android:layout_weight="1"
            android:gravity="left"
            android:text="北京分行"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_right_bank"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right1" />
    </LinearLayout>

    <include layout="@layout/module_include_divider" />

    <LinearLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_pay2" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:gravity="left"
            android:text="支付宝支付"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_right_alipay"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right1" />
    </LinearLayout>

    <include layout="@layout/module_include_divider" />

    <LinearLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commit_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_pay1" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:gravity="left"
            android:text="微信支付"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_right_wechat"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/right1" />
    </LinearLayout>


</LinearLayout>
